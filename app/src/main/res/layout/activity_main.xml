<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

<LinearLayout
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/teamNameA"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Team A"
        android:textColor="#020507"
        android:textSize="26sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#040d89"
        android:textSize="42sp"
        android:id="@+id/aPoint"/>

    <Button
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 points"
        android:textSize="24sp"
        android:onClick="threeForTeamA"

        />


    <Button
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 points"
        android:textSize="24sp"
        android:onClick="twoForTeamA"

        />


    <Button
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 points"
        android:textSize="24sp"
        android:onClick="oneForTeamA"

        />


</LinearLayout>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"/>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="24dp"
            android:id="@+id/teamNameB"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Team B"
            android:textColor="#020507"
            android:textSize="26sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#040d89"
            android:textSize="42sp"
            android:id="@+id/bPoint"/>

        <Button
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3 points"
            android:textSize="24sp"
            android:onClick="threeForTeamB"

            />


        <Button
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2 points"
            android:textSize="24sp"
            android:onClick="twoForTeamB"

            />


        <Button
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1 points"
            android:textSize="24sp"
            android:onClick="oneForTeamB"

            />


    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    <Button

        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textSize="26dp"
        android:onClick="resetContent"
        />
<Button


        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HISTORY"
        android:textSize="26dp"
        android:onClick="contentHistory"
        />
    </LinearLayout>
</RelativeLayout>